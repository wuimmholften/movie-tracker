        <% movies.forEach((movie) => { %>
            <li>
                
                <a href="/movies/update/<%= movie.id %>"><%= movie.name %></a>
                <button type="button" onclick="deleteMovie(<%= movie.id %>)">Borrar</button>
            </li>

        <% }); %>

        <a href="/movies/create">Add Movie</a>
        
    </ul>

